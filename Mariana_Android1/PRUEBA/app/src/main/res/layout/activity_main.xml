<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:textAlignment="textEnd"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="382dp"
        android:layout_height="44dp"
        android:background="#FDFAFA"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072">

        <TextView
            android:id="@+id/tvNum_1"
            android:layout_width="444dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:hint="0"
            android:paddingHorizontal="10dp"
            android:textAlignment="textEnd"
            android:textColor="#AFABAB"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="366dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412">

        <Button
            android:id="@+id/btn7"
            style="@style/Widget.Material3.Button"
            android:layout_width="72dp"
            android:layout_height="83dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn8"
            style="@style/Widget.Material3.Button"
            android:layout_width="75dp"
            android:layout_height="86dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn9"
            style="@style/Widget.Material3.Button"
            android:layout_width="75dp"
            android:layout_height="79dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnDivi"
            style="@style/Widget.Material3.Button"
            android:layout_width="76dp"
            android:layout_height="81dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicOperacion"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="364dp"
        android:layout_height="86dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583">

        <Button
            android:id="@+id/btn4"
            android:layout_width="76dp"
            android:layout_height="78dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="4"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="76dp"
            android:layout_height="80dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="5"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="76dp"
            android:layout_height="80dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="6"
            android:textColor="#101010"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnMulti"
            android:layout_width="78dp"
            android:layout_height="79dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicOperacion"
            android:text="x"
            android:textColor="#0B0A0A"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="86dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761">

        <Button
            android:id="@+id/btn1"
            android:layout_width="75dp"
            android:layout_height="81dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="1"
            android:textColor="#0C0C0C"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="77dp"
            android:layout_height="82dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="2"
            android:textColor="#090909"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="78dp"
            android:layout_height="82dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="3"
            android:textColor="#100F0F"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnRest"
            android:layout_width="77dp"
            android:layout_height="84dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicOperacion"
            android:text="-"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="365dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93">

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="81dp"
            android:layout_height="78dp"
            android:backgroundTint="#6DFFFFFF"
            android:text="="
            android:textColor="#0C0C0C"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="81dp"
            android:layout_height="76dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="0"
            android:textColor="#0B0B0B"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnPunto"
            android:layout_width="78dp"
            android:layout_height="76dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicNumero"
            android:text="."
            android:textColor="#0B0A0A"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#989494" />

        <Button
            android:id="@+id/btnMas"
            android:layout_width="78dp"
            android:layout_height="76dp"
            android:backgroundTint="#6DFFFFFF"
            android:onClick="clicOperacion"
            android:text="+"
            android:textColor="#090909"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="73dp"
        android:layout_height="60dp"
        android:layout_marginTop="156dp"
        android:backgroundTint="#6DFFFFFF"
        android:text="C"
        android:textColor="#050505"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="382dp"
        android:layout_height="57dp"
        android:background="#FBF9F9"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136">

        <TextView
            android:id="@+id/tvNum_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:paddingHorizontal="10dp"
            android:textAlignment="textEnd"
            android:textSize="34sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>